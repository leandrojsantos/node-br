{
  "name": "api-strategy-pattern",
  "version": "3.0.0",
  "description": "API Node.js refatorada com padrões 2025, Strategy Pattern, Jest, Swagger e Podman",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node -e \"if(!require('fs').existsSync('.env')){require('fs').copyFileSync('env.example','.env');console.log('✅ Arquivo .env criado a partir do env.example');}\" && nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "podman:build": "podman build -t node-br-refactored .",
    "podman:run": "podman run -p 3000:3000 node-br-refactored",
    "podman:start": "./scripts/start-all.sh",
    "podman:stop": "./scripts/stop-all.sh",
    "podman:clean": "./scripts/cleanup.sh",
    "podman:compose": "./scripts/compose.sh",
    "start:containers": "./scripts/start-all.sh",
    "stop:containers": "./scripts/stop-all.sh",
    "tsc": "tsc -p tsconfig.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "keywords": [
    "nodejs",
    "api",
    "strategy-pattern",
    "jest",
    "swagger",
    "podman",
    "mongodb",
    "postgresql"
  ],
  "author": "Leandro Santos",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {
    "@hapi/hapi": "^21.0.0",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.0",
    "@prisma/client": "6.16.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express-rate-limit": "^7.1.5",
    "hapi-auth-jwt2": "^8.0.0",
    "hapi-swagger": "^15.0.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "pg": "^8.11.0",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.5.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^30.1.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "prisma": "6.16.2",
    "supertest": "^7.1.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
